<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/theecogame_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheECOGame"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".presentation.ranking.view.RankingActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.userManagement.view.UserManagementActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.register.view.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.mainScreen.view.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.mainScreen.view.MainScreenActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.game.view.GameActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.editProfile.view.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.statistics.view.ActivityStatistics"
            android:exported="false" />
        <activity
            android:name=".presentation.setting.view.SettingActivity"
            android:exported="false" />
    </application>

</manifest>